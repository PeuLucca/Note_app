<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Note" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#43302a</item>
        <item name="colorPrimaryVariant">#332520</item>
        <item name="colorOnPrimary">@color/white</item> <!-- PERMITE QUE OS ICONES FIQUEM DA COR DEFINIDA -->
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#85584a</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="android:statusBarColor">#332520</item>
        
        <!-- Status bar color. -->
        <!-- Customize your theme here. -->
    </style>

    <style name="MyRatingBar" parent="Widget.AppCompat.RatingBar">

        <!-- non selected star color  -->
        <item name="colorControlNormal">#4D000000</item>

        <!-- selected star color  -->
        <item name="colorControlActivated">@color/dialog_color_1</item>

    </style>

    <style name="Theme.Note.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Note.AppBarOverlay" parent="ThemeOverlay.AppCompat.ActionBar"/>

    <style name="Theme.Note.PopupOverlay" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:textColorSecondary">#FFFCC6</item>
    </style>

</resources>